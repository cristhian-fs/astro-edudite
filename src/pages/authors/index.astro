---
import AuthorCard from '@/components/AuthorCard.astro'
import Breadcrumbs from '@/components/Breadcrumbs.astro'
import Line from '@/components/line.astro'
import PageHead from '@/components/PageHead.astro'
import Layout from '@/layouts/Layout.astro'
import { getAllAuthors } from '@/lib/data-utils'

const authors = await getAllAuthors()
---

<Layout class="max-w-2xl pt-16">
  <PageHead slot="head" title="Authors" />
  <Line 
    direction="vertical"
    class='fixed top-0 right-4 md:right-[calc(50%-42rem/2)]'
  />
  <Line 
    direction="vertical"
    class='fixed top-0 left-4 md:left-[calc(50%-42rem/2)]'
  />
  <div class="px-8 md:px-4">
    <Breadcrumbs items={[{ label: 'Authors', icon: 'lucide:users' }]} />
  </div>
  {
    authors.length > 0 ? (
      <ul class="flex flex-col gap-4 px-8 md:px-4">
        {authors.map((author) => (
          <li class="relative py-4">
            <Line 
              direction="horizontal"
              class="absolute top-0 left-1/2"
            />
            <AuthorCard author={author} />
            <Line 
              direction="horizontal"
              class="absolute bottom-0 left-1/2"
            />
          </li>
        ))}
      </ul>
    ) : (
      <p class="text-muted-foreground text-center">No authors found.</p>
    )
  }
</Layout>
